<div class='card mt-5 mb-5'>
  <div class='card-body'>
    <ul class='list-group'>
      <li class='list-group-item fw-medium'>
        <p class='h4'>{{title.userName}}</p>
        <p class='h6 pt-2'>{{title.caption}}</p>
        <p class='text pt-3'>{{title.date}}</p>
      </li>
      {{#with reviewBody}}
        <li class='list-group-item fw-medium'>
          <div>
            <p class='fw-medium'>{{seller.title}}
              :
              {{seller.value}}</p>
          </div>
          <div>
            <p class='fw-medium'>{{rating.title}}
              :
              {{rating.value}}
            </p>
          </div>
          <div>
            {{#each text}}
              <p class='fw-normal'>{{this}}</p>
            {{/each}}
          </div>
          <div>
            <div>
              <p class='text pt-3'><strong
                >{{advantages.title}}:</strong>
              </p>
            </div>
            <div>
              <p class='fw-normal'>{{advantages.text}}</p>
            </div>
          </div>
          <div>
            <div>
              <p class='text pt-3'><strong
                >{{disadvantages.title}}:</strong>
              </p>
            </div>
            <div>
              <p
                class='fw-normal pb-3'
              >{{disadvantages.text}}
              </p>
            </div>
          </div>
          <div>
            {{#each images}}
              <img
                src={{this}}
                class='img-thumbnail mb-2 me-2'
                alt='...'
              />
            {{/each}}
          </div>
        </li>
        <div class='col-11-end ms-5'>
          {{#each coments}}
            <div class='card mt-4 mb-2'>
              <div class='card-body fw-medium'>
                <h5>{{userName}}</h5>
                <p class='fw-normal'>{{date}}</p>
                <p class='fw-normal'>{{text}}</p>
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </ul>
  </div>
</div>