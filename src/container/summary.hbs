{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - '/summary'
}}

<div>
	{{#with main}}
		<main>
			<section class='col-12'>
				{{> title data=summary.title big=true}}
			<div>
					<p class='text fw-medium mt-3'>
					{{summary.text}}
					</p>
			</div>
			</section>

			{{#with experience}}
				<section class='col-12'>
					{{> title data=title}}
					<div>
						<p class='text fw-medium mt-3'>
							{{text}}
						</p>
					</div> 
				</section>
			{{/with}}
		</main>
  	{{/with}}
</div>

