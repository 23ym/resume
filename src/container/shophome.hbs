{{! 
Це код container файлу для task31 сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/task31"
}}
<main>
    <div class='row gy-2'>
        <section class='col-12'>
            <div class='card'>
                {{#with navigation}}
                    <div>
                        <ul class='nav pb-3 pt-3'>
                            <li class='nav-item'>
                                {{#each links}}
                                    <li class='nav-item'>
                                        <a
                                        class='nav-link'
                                        href='{{href}}'
                                        ><b>{{text}}</b></a>
                                    </li>
                                {{/each}}
                            </li>
                            <li class='nav-item'>
                                <a class='nav-link disabled'>Disabled</a>
                            </li>
                        </ul>
                    </div>
                {{/with}}
            </div>
        </section>
        <section class='col-12'>
            {{#with newsBlock}}
                <div class='text-center pt-3 pb-3'>
                    <h1>{{title}}</h1>
                </div>
                <div class='row g-2'>
                    {{#each cards}}
                        <div class='col-3'>
                            <div class='card mb-3'>
                                <div class='d-flex flex-column'>
                                    <div class='card text-bg-dark'>
                                        <div class='card-header'>{{title}}
                                            {{#if isTop}}
                                                <span
                                                class='badge rounded-pill text-bg-danger fs-6 m-2'
                                                >Топ
                                                </span>
                                            {{/if}}
                                            {{#if isNew}}
                                                <span
                                                class='badge rounded-pill text-bg-success fs-6 m-2'
                                                >Нова
                                                </span>
                                            {{/if}}
                                        </div>
                                        <div class='card-body'>
                                            {{description}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/with}}
        </section>
        <hr>
        <section class='col-12'>
            {{#with goodsBlock}}
                <div class="nav nav-tabs mt-4 mb-5">
                    {{#each tabs}}
                        <li class="nav-item">
                            {{#if isActive}}
                                <a class="nav-link active 
                                " aria-current="page" href="#"><strong>{{text}}</strong></a>
                            {{/if}}
                            {{#unless  isActive}}
                                {{#if isDisabled}}
                                <a class="nav-link disabled 
                                " aria-current="page" href="#">{{text}}</a>
                                {{/if}}
                                {{#unless isDisabled}}
                                <a class="nav-link 
                                " aria-current="page" href="#">{{text}}</a>
                                {{/unless}}
                            {{/unless}}
                        </li>
                    {{/each}}
                </div>
                <div class='row g-2'>
                    {{#each cards}}
                        <div class='col-4'>
                            <div class='card mx-1 my-3'>
                                <img class='card-img-top' src='{{image}}'>
                                <div class='card-body'>
                                    <h4 class='card-title'>{{title}}
                                        {{#if isHot}}
                                        <span
                                            class='badge rounded-pill text-bg-warning text-light fs-6 text-uppercase m-1'
                                        >Популярне!
                                        </span>
                                        {{/if}}
                                        {{#if isNew}}
                                        <span
                                            class='badge rounded-pill text-bg-primary fs-6 m-1'
                                        >Нове
                                        </span>
                                        {{/if}}
                                    </h4>
                                    <div>
                                        <p class='card-text'>{{description}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/with}}
        </section>
        <hr>
        <section class='col-12'>
            {{#with subscribe}}
                <div class='card mt-3 mb-3'>
                    <div class='card text-bg-dark'>
                        <div class='card-body'>
                            <h2 class='card-title pb-3'>{{header}}</h2>
                            <p
                            class='card-text fs-5 mb-3'
                            >{{description}}</p>
                            {{#each buttons}}
                                <div class='col-3'>
                                    <div
                                        class='btn-group-vertical'
                                        role='group'
                                        aria-label='Vertical button group'
                                    >
                                        <a
                                        href='{{link}}'
                                        class='btn btn-primary btn-lg fs-6 my-2'
                                        >{{text}}</a>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/with}}
        </section>
        <hr>
        <section class='col-12'>
            {{#with service}}
                <div class='card mt-3 mb-3'>
                    <div class='card text-bg-success text-center'>
                        <div class='card-body'>
                            <h2 class='card-title pb-3'>{{title}}</h2>
                            <p class='card-text pb-3'>{{description}}</p>
                            {{#each buttons}}
                                <div class='col-3 mx-auto'>
                                    <a
                                        href='{{link}}'
                                        class='btn btn-primary py-2'
                                    >{{text}}</a>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/with}}
        </section>
        <hr>
        <section class='col-12'>
            <div class='nav'>
                {{#each footer}}
                    <div class='row'>
                        <div class='col-1 g-2'>
                            {{#each this}}
                                <div class='nav flex-column'>
                                    <div class='nav-item fw-semibold'>
                                        <a
                                        class='nav-link  {{#if @last}} disabled {{/if}}'
                                        href='{{link}}'
                                        >{{text}}</a>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </section>
    </div>
</main>



               
               
           
               
               
               
               
               
               
                    
                    

                       
                
                   
                   
