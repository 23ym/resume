{{! 
Це код container файлу для task31 сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - '/task31'
}}
<main>
    <div class='row gy-2'>
        <section class='col-12'>
            <div class='card'>
                {{#with navigation}}
                    <div>
                        <ul class='nav pb-3 pt-3'>
                            <li class='nav-item'>
                                {{#each links}}
                                   <li class='nav-item'>
                                        <a
                                        class='nav-link {{#unless href includeZero=true}}
                                        disabled
                                        {{/unless}}'
                                        href='{{href}}'
                                        ><b>{{text}}</b></a>
                                    </li>
                                {{/each}}
                            </li>    
                        </ul>
                    </div>
                {{/with}}
            </div>
        </section>
        <section class='col-12'>
                <div class='text pt-2 pb-2'>
                    <h1>{{header}}</h1>
                </div>
        </section>        
        <section class='col-12'>
            <div class='row'>
                <div class='container col-8'>
                    {{#with contacts_data}}
                        <section>
                            <div class='text pb-3'>
                                <h2>{{title}}</h2>
                            </div>
                            <div>
                                {{#each buttons}}
                                    <input type='radio' class='btn-check' 
                                    name='options-outlined' 
                                    {{#if isPrimary}}
                                        id='warning-outlined' autocomplete='off' checked 
                                    {{/if}} 
                                    {{#if isOutline}} 
                                        id='danger-outlined' autocomplete='off'
                                    {{/if}}>
                                    <label 
                                        {{#if isPrimary}}
                                            class='btn btn-outline-warning text-light'
                                            for='warning-outlined' 
                                        {{/if}} 
                                        {{#if isOutline}} 
                                            class='btn btn-outline-warning ms-2' 
                                            for='danger-outlined' 
                                        {{/if}}>
                                        <strong>
                                            {{text}}
                                        </strong>
                                    </label>
                                {{/each}}
                            </div>
                        </section>
                        <section>
                            {{#with form}}
                                <div>
                                    {{#with input}}
                                        <div>
                                            <div class='row'>
                                                {{#each this}}
                                                    <div class='col-6 mt-3 mb-3 pe-1'>
                                                        <label class='form-label me-3'>
                                                            {{label}}
                                                        </label>
                                                        <input type='text' 
                                                        class='form-control form-control-sm'  
                                                        id='exampleFormControlInput1' 
                                                        placeholder='{{placeholder}}'>
                                                        <div class='form-text'>
                                                            {{caption}}
                                                        </div>
                                                    </div>    
                                                {{/each}}
                                            </div>
                                        </div>
                                    {{/with}}
                                </div>
                                <hr>
                                <div>
                                    {{#each switch}}
                                        <div class='form-check form-switch mt-4 mb-4'>
                                            <input 
                                                class='form-check-input' 
                                                type='checkbox' 
                                                role='switch' 
                                            {{#if isActive}} 
                                                id='flexSwitchCheckChecked' 
                                                checked 
                                            {{else}} 
                                                id='flexSwitchCheckDefault'
                                            {{/if}}>
                                            <label class='form-check-label' 
                                                {{#if isActive}} 
                                                    for='flexSwitchCheckChecked' 
                                                {{else}} 
                                                    for='flexSwitchCheckDefault'
                                                {{/if}}>
                                                <strong>
                                                    {{text}}
                                                </strong>
                                            </label>
                                        </div>
                                    {{/each}}
                                </div>    
                            {{/with}}
                        </section>
                    {{/with}}
                    <hr>
                    <section class='col-12'>
                        {{#with delivery}}
                            <div>
                                <p class='h2'>{{title}}</p>
                            </div>
                            <div class='card mt-4'>
                                <div class='card-body'>
                                    <div class='row'>
                                        {{#each select}}
                                            <div class='col-6'>
                                                <label 
                                                    class='form-label'>
                                                    {{label}}
                                                </label>
                                                <select 
                                                    class='form-select text-truncate'>
                                                    <option 
                                                        selected>{{placeholder}}
                                                    </option>
                                                    {{#each options}}
                                                        <option 
                                                            {{value}}>
                                                            {{text}}
                                                        </option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            <div>
                                {{#each delivery_type}}
                                    <div class='form-check mt-3'>
                                        <label class='form-check-label'>
                                            <input 
                                                name='form-check-delivery_type' 
                                                type='radio' 
                                                class='form-check-input' 
                                            {{#if @first}} 
                                            checked 
                                            {{/if}}> {{type}}
                                        </label>
                                    </div>
                                {{/each}}
                            </div>
                            <hr>
                            <section class='col-12'>
                                {{#with payment}}
                                    <div>
                                        <p class='h2'>
                                            {{title}}
                                        </p>
                                        <div class='fw-bolder'>
                                            {{#each list}}
                                                <div class='form-check pt-2'>
                                                    <label class='form-check-label'>
                                                        <input 
                                                            name='form-check-payment' 
                                                            type='radio' 
                                                            class='form-check-input' 
                                                        {{#if @first}} 
                                                        checked 
                                                        {{/if}}> {{type}} 
                                                        <p 
                                                            class='fw-semibold pt-2'>
                                                            {{description}}
                                                        </p>
                                                    </label>
                                                </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                {{/with}}
                            </section>
                            <hr>
                            <section class='col-12'>
                                {{#with contact}}
                                    <div class='text pt-2 pb-2'>
                                        <p class='h2'>{{title}}</p>
                                    </div>
                                    <div class='row'>
                                        {{#each this}}
                                            {{#unless @first}}
                                                <div class='col-6 mt-2 mb-2 pe-1'>
                                                    <label class='form-label me-3'>
                                                        {{label}}
                                                    </label>
                                                    <input type='text' 
                                                        {{#if @first}} 
                                                            style='display:none;'
                                                        {{/if}}
                                                        class='form-control form-control-sm'  
                                                        id='exampleFormControlInput1' 
                                                        placeholder='{{placeholder}} 
                                                    '> 
                                                    <div class='form-text'>
                                                        {{caption}}
                                                    </div>
                                                </div>   
                                            {{/unless}} 
                                        {{/each}}
                                    </div>
                                {{/with}}
                            </section>
                            <hr>
                        <section class='col-12'>
                            {{#with coment}}
                                <div>
                                    <p class='h6'>{{label}}</p>
                                </div>
                                <div class='form-control' 
                                    placeholder='text'>{{placeholder}}
                                </div>
                            {{/with}}
                        </section>    
                        {{/with}}
                    </section>
                    <hr>
                    <section class='col-12'>
                        <div class='row'>
                            {{#with coupon}}
                            <div>
                                <p class='h2'>{{title}}</p>
                            </div>
                            {{#with select}}
                                <div>
                                    {{#each this}}
                                        <div>
                                            <label 
                                                for='coupon' 
                                                class='form-label fw-semibold mt-3'>{{label}}
                                            </label>
                                            <select 
                                                class='form-select 
                                                {{#if @first}} form-select-lg 
                                                {{else}} form-select-sm 
                                                {{/if}}' 
                                                aria-label='.form-select-lg example'>
                                                <option 
                                                    selected>{{placeholder}}
                                                </option>
                                                {{#each options}}
                                                    <option 
                                                        value={{value}}>{{text}}
                                                    </option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    {{/each}}
                                </div>
                            {{/with}}
                            <div>
                                {{#with add}}
                                    {{#each this}}
                                        <div>
                                            <label 
                                                for='add-friend' 
                                                class='form-label fw-semibold mt-3'>{{label}}
                                            </label>
                                            <input 
                                                class='form-control 
                                            {{#if @first}} form-control-lg
                                            {{else}} form-control-sm
                                            {{/if}}' 
                                            type='text' placeholder='{{placeholder}}'>
                                            <div class='form-text'>
                                                {{caption}}
                                            </div>
                                        </div> 
                                    {{/each}}
                                {{/with}}
                            </div>
                        {{/with}}
                        </div>
                    </section>
                    <hr>
                    <section class='col-12'>
                        {{#with quiz}}
                            <div>
                                <p class='h5'>{{title}}</p>
                            </div>
                            {{#with preference}}
                                <label 
                                    for='quiz-title' 
                                    class='form-label fw-semibold mt-3'>{{title}}
                                </label>
                                {{#each options}}     
                                    <div class='form-check mt-3'>
                                        <label class='form-check-label'>
                                            <input 
                                                name='form-check-delivery' 
                                                type='radio' 
                                                class='form-check-input' 
                                            {{#if @first}} 
                                            checked 
                                            {{/if}}> {{this}}
                                        </label>
                                    </div>
                                {{/each}}
                            {{/with}}
                            <div class='mb-3 mt-3'>
                                {{#with your_expirience}}
                                    <label 
                                        for='exampleFormControlInput1' 
                                        class='form-label fw-semibold'>
                                        {{label}}
                                    </label>
                                    <input 
                                        type='text' 
                                        class='form-control' 
                                        id='exampleFormControlInput1' 
                                        placeholder=''>
                                {{/with}}
                                {{#with purchase_frequency}}
                                    <div class='row'>
                                        <div class='col-12 mt-3'>
                                            <label 
                                                class='form-label fw-semibold'>
                                                {{label}}
                                            </label>
                                            <select 
                                                class='form-select text-truncate'>
                                                <option 
                                                    selected>{{placeholder}}
                                                </option>
                                                {{#each options}}
                                                    <option 
                                                        {{value}}>
                                                        {{text}}
                                                    </option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                {{/with}}
                                {{#with factors}}
                                    <label 
                                        for='factors-title' 
                                        class='form-label fw-semibold mt-3'>
                                        {{title}}
                                    </label>
                                    {{#each options}}     
                                        <div class='form-check mt-3'>
                                            <label 
                                                class='form-check-label'>
                                                <input 
                                                    name='form-check-delivery' 
                                                    type='checkbox' 
                                                    class='form-check-input' 
                                                {{#if @first}} 
                                                    checked 
                                                {{/if}}> {{this}}
                                            </label>
                                        </div>
                                    {{/each}}
                                {{/with}}
                            </div>
                        {{/with}}
                    </section>
                </div>
                <div class='container col-4'>
                    <div class='card mb-3'>
                        <div class='card-body'>
                            {{#each action_block}}
                                <div class='d-grid gap-3 py-2'>
                                    <button class='btn      
                                        {{#if isSuccess}} btn-success {{/if}}
                                        {{#if isDanger}} btn-danger {{/if}}
                                        {{#if isInfo}} btn-info text-light{{/if}}' 
                                        type='button'>{{text}}
                                    </button>
                                </div>  
                            {{/each}}
                        </div>
                    </div>
                    {{#with total}}
                        <div class='card'>
                            <div class='card-body'>
                                <h5 class='card-title fs-2 pb-3'>
                                    {{title}}
                                </h5>
                                {{#each item_list}}
                                    <div>
                                        <p class='card-text pb-2'><strong>{{name}} : {{price}}</strong></p>
                                    </div>
                                {{/each}}
                            </div> 
                            <hr>
                            {{#each additional_info}}
                                <div>
                                    <p class='card-text px-2 pb-2'>{{text}} : {{value}}</p>
                                </div>
                            {{/each}}
                            <hr>
                             {{#with total_price}}
                                <div>
                                    <p class='card-text text-center fs-4 px-1 pb-2'><strong>{{text}} : {{value}}</strong></p>
                                </div>
                            {{/with}}
                            <hr>
                            {{#each button}}
                                <div class='d-grid gap-2'>
                                    <button 
                                        class='btn {{#if isPrimary}} btn-primary 
                                        {{/if}} {{#if isOutline}} btn-outline-primary 
                                        {{/if}} m-2' type='button'>{{text}}
                                    </button>
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}       
                </div>
            </div>    
        </section>       
        <hr>
        <section class='col-12'>
            <div class='nav'>
                {{#each footer}}
                    <div class='row'>
                        <div class='col-2 g-2'>
                            {{#each this}}
                                <div class='nav flex-column mt-2 mb-2'>
                                    <div class='nav-item fw-semibold'>
                                        <a
                                        class='nav-link  {{#if @last}} disabled {{/if}}'
                                        href='{{link}}'
                                        >{{text}}</a>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </section>
    </div>
</main>


                   
