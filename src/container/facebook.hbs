{{! 
Це код container файлу для web сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - '/web'
}}


<div>
    <hr>
    <h1>Welcome to {{ name }}</h1>
    <br>
    <h2>Users</h2>
    <br>
    <ul>
        {{#each users}}
            <li><h3>{{ name }}</h3></li>
            <p>Gender:<strong> {{ gender }}</strong></p>
            <p>Age:<strong> {{ age }}</strong></p>
            <p>id: {{ id }}</p>
            <br>
            {{#if friends}}
                <h4>Friends</h4>
                <ul>
                    {{#each friends}}
                    <li>
                        <p><h5>{{ name }}</h5></p>
                        <p>Gender:<strong> {{ gender }}</strong></p>
                        <p>Age:<strong> {{ age }}</strong></p>
                        <p>id: {{ id }}</p>
                        {{#if mutual_friends}}
                            <h6>Mutual Friends</h6>
                            <ul>
                                {{#each mutual_friends}}
                                <li>
                                    <p><h6>{{ name }}</h6></p>
                                    <p>Gender:<strong> {{ gender }}</strong></p>
                                    <p>Age:<strong> {{ age }}</strong></p>
                                    <p>id: {{ id }}</p>
                                    {{#if mutual_friends}}
                                        <h7>Mutual Friends</h7>
                                        <ul>
                                            {{#each mutual_friends}}
                                            <li>
                                                <p><h7>{{ name }}</h7></p>
                                                <p>Gender:<strong> {{ gender }}</strong></p>
                                                <p>Age:<strong> {{ age }}</strong></p>
                                                <p>id: {{ id }}</p>
                                            </li>
                                            {{/each}}
                                        </ul>
                                    {{/if}}
                                </li>
                                {{/each}}
                                {{#if groups}}
                                    <h5>Groups</h5>
                                    <br>
                                    <ul>
                                        {{#each groups}}
                                        <li>
                                            <p><h6>{{ name }}</h6></p>
                                            <p>{{ description }}</p>
                                            <p>id: {{ id }}</p>
                                            {{#if members}}
                                                <h6>Members</h6>
                                                <ul>
                                                    {{#each members}}
                                                    <li>
                                                        <p><h7>{{ name }}</h7></p>
                                                        <p>Gender:<strong> {{ gender }}</strong></p>
                                                        <p>Age:<strong> {{ age }}</strong></p>
                                                        <p>id: {{ id }}</p>
                                                    </li>
                                                    {{/each}}
                                                </ul>
                                            {{/if}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                {{/if}} 
                            </ul>
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
            {{/if}}
            {{#if groups}}
            <h4>Groups</h4>
            <br>
            <ul>
                {{#each groups}}
                <li>
                    <p><h5>{{ name }}</h5></p>
                    <p>{{ description }}</p>
                    <p>id: {{ id }}</p>
                    {{#if members}}
                        <h6>Members</h6>
                        <ul>
                            {{#each members}}
                            <li>
                                <p><h6>{{ name }}</h6></p>
                                <p>Gender:<strong> {{ gender }}</strong></p>
                                <p>Age:<strong> {{ age }}</strong></p>
                                <p>id: {{ id }}</p>
                            </li>
                            {{/each}}
                        </ul>
                    {{/if}}
                </li>
                {{/each}}
            </ul>
            {{/if}}
        
        {{/each}}
    </ul>
</div>
 
